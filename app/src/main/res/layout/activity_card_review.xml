<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rl_card_review"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".activity.CardReviewActivity">

    <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/button_dismiss"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/white"
            android:id="@+id/tv_chapter_title"
            android:textSize="@dimen/_18ssp"
            android:text="Topic one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_35sdp"/>

    <TextView
            android:id="@+id/tv_topic_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_chapter_title"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_15ssp"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/pink_quiz_text"
            android:fontFamily="@font/quicksand_bold"/>

    <com.blobcity.utils.InfiniteViewPager
            android:id="@+id/vp_card_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_below="@id/tv_topic_count"
            android:layout_above="@id/ll_save_share"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp" />

    <LinearLayout
            android:id="@+id/ll_save_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp">

        <ImageView
                android:id="@+id/iv_save"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/save_button_round_bg"
                android:padding="@dimen/_8sdp"
                android:backgroundTint="@color/purple_save"
                android:layout_gravity="center"
                android:src="@drawable/ic_save"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="save"
                android:textAllCaps="true"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_gravity="center_vertical"/>

        <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/save_button_round_bg"
                android:padding="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:backgroundTint="@color/pink_hint_button_bg"
                android:layout_gravity="center"
                android:src="@drawable/ic_share"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textAllCaps="true"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>



    <!--<com.blobcity.utils.HorizontalCarouselRecyclerView
            android:id="@+id/rcv_card_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/tv_topic_count"
            android:layout_marginTop="@dimen/_20sdp"
            android:clipToPadding="false"
            android:overScrollMode="never" />-->

</RelativeLayout>