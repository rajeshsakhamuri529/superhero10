<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ready_summary_background"
        android:paddingBottom="@dimen/_15sdp"
        tools:context=".activity.QuizSummaryActivity">

    <ImageView
            android:id="@+id/iv_cancel_quiz_summary"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_cancel_white_24dp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/topic_text"
            android:id="@+id/tv_chapter_title"
            android:textSize="@dimen/_17ssp"
            android:text="Topic one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
            android:id="@+id/tv_quiz_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_below="@id/tv_chapter_title"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_16ssp"
            android:textAllCaps="true"
            android:textColor="@color/quiz_text"
            android:fontFamily="@font/quicksand_bold"/>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_quiz_level"
            android:layout_above="@id/qs_cl"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_40sdp">
        <ImageView
                android:id="@+id/iv_card_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_quiz_level"
            android:layout_above="@id/qs_cl"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_40sdp">
        <ImageView
                android:id="@+id/iv_card_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/qs_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_above="@id/tv_completion_status"
            android:layout_centerHorizontal="true">

        <TextView
                android:id="@+id/tv_answer_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/level_completed"
                android:fontFamily="@font/quicksand_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="3"
                android:textSize="@dimen/_19ssp"/>

        <TextView
                android:id="@+id/tv_answer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_answer_status1"
                android:text="  /  "
                android:textSize="@dimen/_17ssp"/>

        <TextView
                android:id="@+id/tv_answer_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_answer_status"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="8"
                android:textSize="@dimen/_17ssp"/>

    </android.support.constraint.ConstraintLayout>


    <TextView
            android:id="@+id/tv_completion_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_17sdp"
            android:textSize="@dimen/_12ssp"
            android:text="Level Completed"
            android:textAllCaps="true"
            android:textColor="@color/level_completed"
            android:fontFamily="@font/quicksand_bold"
            android:layout_above="@id/ll_summary_buttons"/>

    <LinearLayout
            android:id="@+id/ll_summary_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_alignParentBottom="true">

        <Button
                android:id="@+id/btn_play_again"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1.1"
                android:text="Play Again"
                android:textSize="@dimen/_12ssp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/play_again_text"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/play_again"/>

        <Button
                android:id="@+id/btn_review"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="0.8"
                android:text="Review"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:background="@drawable/review_button_bg"/>

        <Button
                android:id="@+id/btn_next_quiz"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1.1"
                android:textSize="@dimen/_12ssp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:text=""
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/play_again_text"
                android:background="@drawable/play_again"/>

        <Button
                android:id="@+id/btn_next_level"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1.1"
                android:textSize="@dimen/_12ssp"
                android:text="Next Topic"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:visibility="gone"
                android:textColor="@color/play_again_text"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/play_again"/>
    </LinearLayout>

</RelativeLayout>