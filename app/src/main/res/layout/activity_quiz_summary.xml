<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ready_summary_background"
        android:paddingBottom="@dimen/_15sdp"
        tools:context=".activity.QuizSummaryActivity">

    <ImageView
            android:id="@+id/iv_cancel_quiz_summary"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/button_dismiss"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/topic_text"
            android:id="@+id/tv_chapter_title"
            android:textSize="@dimen/_17ssp"
            android:text="Topic one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/iv_animation_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_loop="false"
            app:lottie_autoPlay="true"/>

    <TextView
            android:id="@+id/tv_quiz_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_below="@id/tv_chapter_title"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_16ssp"
            android:textAllCaps="true"
            android:textColor="@color/quiz_text"
            android:fontFamily="@font/quicksand_bold"/>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_quiz_level"
            android:layout_above="@id/tv_answer_status"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp">

        <ImageView
                android:id="@+id/iv_card_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_quiz_level"
            android:layout_above="@id/tv_answer_status"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp">
        <ImageView
                android:id="@+id/iv_card_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/purple_card"
                android:visibility="invisible"/>
    </FrameLayout>


    <TextView
            android:id="@+id/tv_answer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_completion_status"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textSize="@dimen/_17ssp"
            android:text="8"
            android:textColor="@color/level_completed"
            android:fontFamily="@font/quicksand_bold"/>

    <TextView
            android:id="@+id/tv_completion_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_17sdp"
            android:textSize="@dimen/_12ssp"
            android:text="questions"
            android:textAllCaps="true"
            android:textColor="@color/level_completed"
            android:fontFamily="@font/quicksand_bold"
            android:layout_above="@id/ll_summary_buttons"/>

    <LinearLayout
            android:id="@+id/ll_summary_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_alignParentBottom="true">

        <Button
                android:id="@+id/btn_play_again"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1.1"
                android:text="Play Again"
                android:textSize="@dimen/_12ssp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/play_again_text"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/hint_button_bg"/>

        <Button
                android:id="@+id/btn_review"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="0.8"
                android:text="Review"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:background="@drawable/review_button_bg"/>

        <Button
                android:id="@+id/btn_next_quiz"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1.1"
                android:textSize="@dimen/_12ssp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:text="QUIZ 1"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/play_again_text"
                android:background="@drawable/hint_button_bg"/>

        <Button
                android:id="@+id/btn_next_level"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1.1"
                android:textSize="@dimen/_12ssp"
                android:text="Next"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:visibility="gone"
                android:textColor="@color/play_again_text"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/hint_button_bg"/>
    </LinearLayout>

</RelativeLayout>