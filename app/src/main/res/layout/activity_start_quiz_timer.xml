<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/_15sdp"
    tools:context=".activity.QuizSummaryActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_summary_buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true">



                    <LinearLayout
                        android:id="@+id/titleLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_light"
                            android:textColor="@color/topic_text"
                            android:id="@+id/title_no"
                            android:textSize="@dimen/_18ssp"
                            android:text="01"
                            android:visibility="gone"
                            android:gravity="center"

                            android:layout_centerHorizontal="true"
                            />


                        <TextView
                            android:id="@+id/tv_quiz_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TINY TEST"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/_18ssp"

                            android:layout_marginLeft="@dimen/_11sdp"
                            android:textColor="@color/topic_text"
                            android:fontFamily="@font/lato_bold"/>
                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:id="@+id/textLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_light"
                            android:textColor="@color/topic_text"
                            android:id="@+id/total_no"
                            android:textSize="@dimen/_20ssp"
                            android:text="4"
                            android:gravity="center"

                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_light"
                            android:textColor="@color/topic_text"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_20ssp"
                            android:text="Qs"
                            android:gravity="center"

                            android:layout_centerInParent="true"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_answers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/textLL"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_centerInParent="true"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_light"
                        android:textColor="@color/topic_text"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_below="@+id/ll_answers"
                        android:textSize="@dimen/_20ssp"
                        android:text="12 mins"
                        android:gravity="center"

                        android:layout_centerInParent="true"
                        />


                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/summaryTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_light"
                    android:textColor="#0080ff"


                    android:textSize="@dimen/_30ssp"
                    android:text="ready?"
                    android:gravity="center"

                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>




        </LinearLayout>


    </RelativeLayout>









    <LinearLayout
        android:id="@+id/ll_summary_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_alignParentBottom="true">

        <!--<Button
            android:id="@+id/btn_play_again"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:text="Play Again"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="@dimen/_12ssp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/play_again_text"
            android:fontFamily="@font/quicksand_bold"
            android:background="@drawable/play_again"/>-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_topics"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"

            android:layout_weight="1"

            android:background="@drawable/close_button">

            <TextView

                android:id="@+id/txt_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:letterSpacing="0.1"
                android:text="BACK"
                android:textColor="#424242"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toEndOf="@+id/left_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/left_arrow"
                android:layout_width="11dp"
                android:layout_height="11dp"


                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/ic_left_arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:text="start"
            android:visibility="visible"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:letterSpacing="0.1"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_bold"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:background="@drawable/submit_active_background"/>

        <Button
            android:id="@+id/btn_play_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1.1"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="Play Next"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/white"
            android:background="@drawable/submit_active_background"/>


    </LinearLayout>

</RelativeLayout>
