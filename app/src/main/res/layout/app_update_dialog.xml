<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:background="@drawable/white_curved_border">


        <RelativeLayout
            android:id="@+id/txtRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_answers"
                android:fontFamily="@font/lato_regular"
                android:textColor="#424242"
                android:visibility="gone"
                android:textSize="@dimen/_12ssp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_35sdp"

                android:text="Your app version is too old."/>

            <TextView
                android:id="@+id/tv_message1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_message"
                android:fontFamily="@font/lato_regular"
                android:textColor="#424242"
                android:textSize="@dimen/_12ssp"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="Please upgrade the app to continue."/>


        </RelativeLayout>



        <Button
            android:id="@+id/btn_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/txtRL"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato_bold"
            android:background="@drawable/submit_active_background"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="UPGRADE"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:letterSpacing="0.1"
            android:textSize="@dimen/_11sdp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            />


        <androidx.constraintlayout.ConstraintLayout
            android:id="@+id/view_result_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/txtRL"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/submit_active_background">

            <TextView
                android:id="@+id/txt_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:letterSpacing="0.1"
                android:text="UPGRADE"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintVertical_bias="0.5"

                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.ConstraintLayout>




    </RelativeLayout>


</RelativeLayout>