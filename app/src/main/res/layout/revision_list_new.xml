        <RelativeLayout
            android:id="@+id/topRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/imageRL"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic1"
                    android:layout_marginTop="@dimen/_2sdp"
                    >

                </ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_toRightOf="@+id/imageRL"
                >

                <TextView
                    android:id="@+id/rid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="#424242"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/timetotaken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 minutes"
                    android:visibility="gone"
                    android:fontFamily="@font/lato_light"
                    android:textColor="@color/lives_text"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/_5sdp"/>


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solving Linear Differential Equations"
                    android:textColor="#424242"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_below="@+id/rid"

                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/shortdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn to solve linear differential equations of the first order using an integrating factor,Learn to solve linear differential equations of the first order using an integrating factor"
                    android:textColor="#424242"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/lato_regular"
                    android:layout_below="@+id/title"

                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bottomRL"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/topRL"
            android:layout_weight="3">
            <TextView
                android:id="@+id/tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Learn to solve linear differential equations of the first order using an integrating factor,Learn to solve linear differential equations of the first order using an integrating factor"
                android:fontFamily="@font/inconsolata_regular"
                android:textColor="@color/header_line"
