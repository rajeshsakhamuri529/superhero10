<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    android:id="@+id/rl_single_topics"

    android:background="@drawable/close_button">


    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/layoutLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_20sdp">

            <!--<RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_square">



            </RelativeLayout>-->

            <RelativeLayout
                android:id="@+id/totalRL"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/rounded_square"
                >
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"

                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_10ssp"

                    android:textColor="@color/lives_text"
                    android:fontFamily="@font/lato_black"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_topic_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:visibility="gone"
            android:textColor="@color/course_text"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:fontFamily="@font/lato_regular"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real Numbers"
            android:layout_toRightOf="@+id/layoutLL"
            android:layout_centerVertical="true"
            android:textColor="@color/course_text"
            android:layout_marginLeft="@dimen/_40sdp"


            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/iv_progress_icon1"
            android:layout_width="@dimen/_11sdp"
            android:layout_height="@dimen/_11sdp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/progress_icon_grey"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/iv_progress_icon2"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_right_arrow"
            android:tint="@color/topics_arrow_tint"
            android:layout_centerVertical="true"
            android:layout_below="@id/iv_progress_icon1"
            android:layout_marginRight="@dimen/_15sdp"/>

        <ImageView
            android:id="@+id/iv_progress_icon3"
            android:layout_width="@dimen/_11sdp"
            android:layout_height="@dimen/_11sdp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/progress_icon_grey"
            android:layout_below="@id/iv_progress_icon2"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_7sdp"/>





    </RelativeLayout>










</RelativeLayout>