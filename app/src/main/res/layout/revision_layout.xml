    <RelativeLayout
        android:id="@+id/tv_revision"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"


        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/lato_light"
            android:text="@string/str_textbooks"

            android:textColor="@color/chapters_text"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/frameLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        </FrameLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:id="@+id/view"
        android:visibility="gone"
        android:layout_below="@+id/tv_revision"
        android:background="@color/header_line"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_13sdp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_revision"
        >

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/textbooksrl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    >


                    <TextView
                        android:id="@+id/tv_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiny Textbooks"
                        android:textSize="@dimen/_14ssp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/course_text"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/lato_black"

                        />

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_revision"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textbooksrl"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"

                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


            </RelativeLayout>



        </androidx.core.widget.NestedScrollView>



    </RelativeLayout>



</RelativeLayout>