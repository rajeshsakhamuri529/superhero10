<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:background="@drawable/lifelost_popup">

    <LinearLayout
            android:id="@+id/wrong_answer_hearts_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/dialog_iv_life3"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/active_heart_copy"
                android:layout_marginRight="@dimen/_6sdp"/>

        <ImageView
                android:id="@+id/dialog_iv_life2"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:src="@drawable/active_heart_copy"/>

        <ImageView
                android:id="@+id/dialog_iv_life1"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/active_heart_copy"/>

    </LinearLayout>

    <TextView
            android:id="@+id/tv_msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:layout_below="@id/tv_msg2"
            android:text="Uh oh.. you lost!"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/quicksand_regular"/>

    <TextView
            android:id="@+id/tv_msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/wrong_answer_hearts_ll"
            android:text="Try again!"
            android:textColor="@color/quiz_text"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/quicksand_regular"/>

    <TextView
        android:id="@+id/tv_msg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:layout_below="@id/tv_msg1"
        android:text="Uh oh.. you lost!"
        android:textColor="#666666"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/quicksand_regular"/>


    <Button android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/tv_msg3"
            android:id="@+id/btn_ok"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/hint_button_bg"
            android:text="Ok"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/hint_text"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="@dimen/_13ssp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

</RelativeLayout>