<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ready_summary_background"
    tools:context="com.blobcity.activity.IntroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">


            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/iv_cancel_quiz_summary"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_cancel_white_24dp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

            </RelativeLayout>



            <TextView
                android:id="@+id/appname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ribeyemarrow_regular"
                android:textColor="@color/play_again_text"

                android:textSize="@dimen/_20ssp"
                android:text="YOMPLEX"
                android:gravity="center"
                android:paddingRight="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"

                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"/>


            <TextView
                android:id="@+id/tv_chapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculus for JEE"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black_text"
                android:layout_below="@+id/appname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_3sdp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <android.support.v4.view.ViewPager
                android:id="@+id/myViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:id="@+id/viewPagerIndicatorIconsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_centerHorizontal="true"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/firstDotImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/selected_dot" />

                <ImageView
                    android:id="@+id/secondDotImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:contentDescription="@null"
                    android:src="@drawable/unselected_dot" />

                <ImageView
                    android:id="@+id/thirdDotImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:contentDescription="@null"
                    android:src="@drawable/unselected_dot" />

                <ImageView
                    android:id="@+id/fourthDotImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:contentDescription="@null"
                    android:src="@drawable/unselected_dot" />
            </LinearLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <Button
                android:id="@+id/getStartedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_drawable"
                android:text="Get Started"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:visibility="visible"/>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
