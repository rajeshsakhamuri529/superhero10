<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blobcity.activity.PDFViewerActivity">


   <!-- <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">-->



        <RelativeLayout
            android:id="@+id/appBarID"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="#FFFFFF"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_centerInParent="true"
                android:visibility="visible"
                android:padding="0dp">

                <!--<include layout="@layout/header" />-->
                <RelativeLayout
                    android:id="@+id/backRL"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    >
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerInParent="true"

                    android:tint="#919191"
                    android:src="@drawable/back_button_arrow"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/topRL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/backRL"
                    android:layout_toLeftOf="@+id/tick1RL">


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tick1RL"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/moreRL">

                    <ImageView
                        android:id="@+id/tick1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_tick_green_circle1"
                        android:layout_marginTop="@dimen/_8sdp"
                        />
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/moreRL"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"

                    android:layout_alignParentRight="true"

                    >
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        android:tint="#919191"
                        android:src="@drawable/ic_more"/>


                   <!-- <ImageView
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/_1sdp"
                        android:tint="@color/white"
                        android:background="@drawable/share"/>-->
                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>
     <!--   </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>-->




    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E8E8"
        android:layout_below="@+id/appBarID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/menuRL"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_10sdp"
        android:visibility="gone"
        android:elevation="20dp"
        android:background="@drawable/close_button">

        <LinearLayout
            android:id="@+id/markreadLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tick"
                android:layout_width="20dp"
                android:layout_height="20dp"

                />

            <TextView
                android:id="@+id/markread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as Read"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="#424242"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/shareLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/markreadLL"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="#424242"
                android:src="@drawable/share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="#424242"/>



        </LinearLayout>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/frameLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarID"
        android:visibility="gone">



    </FrameLayout>


</RelativeLayout>
