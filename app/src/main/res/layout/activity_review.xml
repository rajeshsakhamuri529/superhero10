<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/review_bg"
        tools:context=".activity.ReviewActivity"
        android:paddingBottom="@dimen/_20sdp">

    <TextView
            android:id="@+id/tv_quiz_review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Quiz 1 Review"/>

    <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_below="@id/tv_quiz_review_text"
            android:text="1 of 8"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_count"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/rl_hint_next"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_20sdp"/>

    <RelativeLayout
            android:id="@+id/rl_hint_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/btn_close_review"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/review_button_bg"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="Close Review"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/btn_hint"
                android:background="@drawable/hint_button_bg"
                android:text="Hint"
                android:layout_centerVertical="true"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>