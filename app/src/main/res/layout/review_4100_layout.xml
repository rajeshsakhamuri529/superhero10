<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_360sdp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/dark_purple"

        android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll_quiz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/view"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        tools:context=".activity.TestQuestionActivity">

    <WebView
            android:id="@+id/webView_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_alignParentTop="true"
            android:layout_above="@id/ll_options"
            android:layout_gravity="center_horizontal"/>

    <LinearLayout
            android:id="@+id/ll_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentBottom="true">

        <WebView
                android:id="@+id/webView_option1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:clickable="true"
                android:scrollbars="none"

                android:layout_gravity="center_horizontal"/>

        <WebView
                android:id="@+id/webView_option2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:clickable="true"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"/>

        <WebView
                android:id="@+id/webView_option3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:clickable="true"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"/>

        <WebView
                android:id="@+id/webView_option4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:clickable="true"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>

