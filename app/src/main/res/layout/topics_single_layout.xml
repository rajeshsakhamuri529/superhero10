<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:id="@+id/rl_single_topics"

        android:background="@drawable/close_button">


    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_topic_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textColor="@color/course_text"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:fontFamily="@font/lato_regular"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real Numbers"
            android:layout_centerVertical="true"
            android:textColor="@color/course_text"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/_12ssp"

            android:layout_toStartOf="@+id/iv_progress_icon2"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/iv_progress_icon1"
            android:layout_width="@dimen/_11sdp"
            android:layout_height="@dimen/_11sdp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/progress_icon_grey"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/iv_progress_icon2"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_right_arrow"
            android:tint="@color/topics_arrow_tint"
            android:layout_centerVertical="true"
            android:layout_below="@id/iv_progress_icon1"
            android:layout_marginRight="@dimen/_15sdp"/>

        <ImageView
            android:id="@+id/iv_progress_icon3"
            android:layout_width="@dimen/_11sdp"
            android:layout_height="@dimen/_11sdp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/progress_icon_grey"
            android:layout_below="@id/iv_progress_icon2"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_7sdp"/>





    </RelativeLayout>


<RelativeLayout
    android:id="@+id/lock_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/top_layout"
    android:visibility="gone"
    android:background="#E8E8E8">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_centerInParent="true"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/lock"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"

            android:src="@drawable/ic_unlock"


            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/lock_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock all Topics!"
            android:layout_centerVertical="true"
            android:textColor="@color/dark_purple"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_toRightOf="@+id/lock"
            android:fontFamily="@font/quicksand_medium"
            android:textSize="@dimen/_12ssp"

            android:layout_marginRight="5dp"/>

    </RelativeLayout>

</RelativeLayout>






</RelativeLayout>