<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topics"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"


        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz"
            android:textSize="@dimen/_17ssp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_18sdp"

            android:textColor="@color/chapters_text"
            android:textStyle="bold"
            android:fontFamily="@font/lato_light"
            />

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view"
        android:visibility="gone"
        android:layout_below="@+id/topics"
        android:background="@color/button_border_color"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topics"
        >
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/topicsrl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    >


                    <TextView
                        android:id="@+id/tv_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/topics"
                        android:textSize="@dimen/_14ssp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/course_text"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/lato_black"

                        />

                </RelativeLayout>



                <TextView
                    android:id="@+id/tv_class1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/topics"
                    android:textSize="@dimen/_23ssp"
                    android:visibility="gone"
                    android:textColor="@color/course_text"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:fontFamily="@font/lato_bold"

                    android:layout_marginTop="@dimen/_20sdp"/>

                <TextView
                    android:id="@+id/tv_class_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_cbse"
                    android:textSize="@dimen/_16ssp"
                    android:visibility="gone"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/chapters_text"
                    android:fontFamily="@font/montserrat_light"/>

