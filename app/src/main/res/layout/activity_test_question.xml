<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".activity.TestQuestionActivity">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/button_dismiss"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

            <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="3 of 8"
                    android:textSize="@dimen/_13sdp"/>

            <View
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="1dp"
                    android:id="@+id/view"
                    android:background="@color/light_purple"
                    android:layout_below="@id/tv_count"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_8sdp"/>

            <ImageView
                    android:id="@+id/iv_life1"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/active_heart_copy"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_19sdp"/>

            <ImageView
                    android:id="@+id/iv_life2"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/active_heart_copy"
                    android:layout_toLeftOf="@id/iv_life1"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_19sdp"/>

            <ImageView
                    android:id="@+id/iv_life3"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/active_heart_copy"
                    android:layout_toLeftOf="@id/iv_life2"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_19sdp"/>

            <LinearLayout
                    android:id="@+id/ll_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@id/view"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginRight="@dimen/_50sdp">

                <WebView
                        android:id="@+id/webView_question"
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/dashed_border"
                        android:layout_gravity="center_horizontal"/>

                <WebView
                        android:id="@+id/webView_option1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_gravity="center_horizontal"/>

                <WebView
                        android:id="@+id/webView_option2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center_horizontal"/>

                <WebView
                        android:id="@+id/webView_option3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center_horizontal"/>

                <WebView
                        android:id="@+id/webView_option4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center_horizontal"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:id="@+id/btn_next"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@drawable/button_white_corner_border"
                        android:text="Next"
                        android:textColor="@color/dark_purple"/>

            </LinearLayout>

        </RelativeLayout>
</ScrollView>