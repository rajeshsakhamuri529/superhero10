<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:background="@drawable/lifelost_popup">

        <TextView
                android:id="@+id/_last_topic_tv_msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:layout_alignParentTop="true"
                android:text="Complete All Super Quiz To"
                android:textColor="@color/purple"
                android:layout_marginTop="@dimen/_20sdp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/quicksand_regular"/>

        <TextView
                android:id="@+id/_last_topic_tv_msg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:layout_below="@id/_last_topic_tv_msg1"
                android:text="Unlock This Level!"
                android:textColor="@color/purple"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"

                android:fontFamily="@font/quicksand_regular"/>


        <Button android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@id/_last_topic_tv_msg2"
                android:id="@+id/_last_topic_btn_ok"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/hint_button_bg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="Ok"
                android:textColor="@color/hint_text"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_13ssp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"/>

    </RelativeLayout>


</RelativeLayout>